%li[character]
  %table.character
    %tr.names
      %td{:rowspan => 3}= image_tag(Character.image_path(:sprite,character.class_id,character.rank_colour))
      %td{:colspan => 4}== #{cs character.name} / #{cs character.class_name}
    %tr.hp_sp
      %th HP
      %td= character.current_hp
      %th SP
      %td= character.current_sp
    %tr
      %td{:colspan => 4}= link_to 'Edit', edit_character_path(character)
      